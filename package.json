{
  "publisher": "DorianMassoulier",
  "name": "repomix-runner",
  "displayName": "Repomix Runner",
  "description": "Run Repomix anywhere in your AppTree. The output is copied to clipboard. No more output file to delete.",
  "repository": "https://github.com/MassDo/repomix-runner.git",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Repomix Runner",
      "properties": {
        "repomixRunner.keepOutputFile": {
          "type": "boolean",
          "default": false,
          "description": "Keep the repomix-output.txt file after copying its content to clipboard"
        },
        "repomixRunner.copyMode": {
          "type": "string",
          "enum": [
            "content",
            "file"
          ],
          "default": "file",
          "description": "Choose what to copy to clipboard: 'content' for text content, 'file' for the file itself"
        }
      }
    },
    "commands": [
      {
        "command": "repomixRunner.run",
        "title": "Run Repomix",
        "description": "run repomix in the current folder and save the output to clipboard",
        "icon": "$(book)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "repomixRunner.run",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
